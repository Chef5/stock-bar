{
	"name": "stock-bar",
	"displayName": "Stock Bar",
	"description": "股票监控，底部状态栏实时更新",
	"version": "1.0.2",
	"publisher": "Chef",
	"license": "MIT",
	"keywords": [
		"stock",
		"vscode"
	],
	"icon": "stocks.png",
	"engines": {
		"vscode": "^1.28.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension",
	"contributes": {
		"configuration": {
			"properties": {
				"stock-bar.stocks": {
					"type": "object",
					"default": {
            			"sh000001": "上证"
          			},
					"description": "股票代码:自定义名称 配置需要监控的股票代码，港股请加上hk前缀，美股加上US_前缀"
				},
				"stock-bar.updateInterval": {
					"type": "number",
					"default": 10000,
					"description": "配置轮询请求最新数据的时间间隔，单位：毫秒"
				},
				"stock-bar.riseColor": {
					"type": "string",
					"default": "",
					"description": "股票涨的颜色，默认使用当前主题文字颜色"
				},
				"stock-bar.fallColor": {
					"type": "string",
					"default": "#999999",
					"description": "股票跌的颜色"
				},
				"stock-bar.showTime": {
					"type": "array",
					"default": [
						9,
						16
					],
					"description": "显示的时间段"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^4.7.2",
		"vscode": "^1.1.37",
		"eslint": "^8.16.0",
		"@types/node": "^17.0.38",
		"@types/mocha": "^9.1.1"
	},
	"dependencies": {
		"axios": "^0.27.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Chef5/stock-bar"
	}
}
