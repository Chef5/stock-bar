{
	"name": "stock-bar",
	"displayName": "Stock Bar",
	"description": "股票监控，底部状态栏实时更新 A股|港股|美股|实时股票数据",
	"version": "1.0.3",
	"publisher": "Chef",
	"license": "MIT",
	"keywords": [
		"stock",
		"vscode"
	],
	"icon": "stocks.png",
	"engines": {
		"vscode": "^1.28.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./src/extension",
	"contributes": {
		"configuration": {
			"properties": {
				"stock-bar.stocks": {
					"type": "array",
					"default": [
						"sh000001",
            {
              "code": "sz000001",
              "alias":  "平安"
            }
					],
					"description": "股票代码数组，配置需要监控的股票代码，港股请加上hk前缀，美股加上US_前缀"
				},
				"stock-bar.updateInterval": {
					"type": "number",
					"default": 10000,
					"description": "配置轮询请求最新数据的时间间隔，单位：毫秒"
				},
				"stock-bar.riseColor": {
					"type": "string",
					"default": "",
					"description": "股票涨的颜色，默认跟随系统"
				},
				"stock-bar.fallColor": {
					"type": "string",
					"default": "",
					"description": "股票跌的颜色，默认跟随系统"
				},
				"stock-bar.showTime": {
					"type": "array",
					"default": [
						9,
						16
					],
					"description": "显示的时间段"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint ./src --fix",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.1",
		"@types/node": "^17.0.38",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.6.2",
		"typescript": "^4.7.2",
		"vscode": "^1.1.37"
	},
	"dependencies": {
		"axios": "^0.27.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Chef5/stock-bar"
	}
}
